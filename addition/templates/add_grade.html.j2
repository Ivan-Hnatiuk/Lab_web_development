{% extends "base.html.j2" %}
{% block content %}
<div class="card">
    <h2>Додати оцінку студенту</h2>
    <p class="muted">
        Оберіть студента та дисципліну з випадних списків і введіть значення оцінки вручну.
    </p>

    {% if error %}
        <p style="color: #b00020; font-weight: 600;">{{ error }}</p>
    {% endif %}

    <form method="post">
        <div style="margin-bottom: 1rem;">
            <label for="student_id">Студент:</label><br>
            <select id="student_id" name="student_id" required>
                <option value="">-- Оберіть студента --</option>
                {% for student in students %}
                    <option value="{{ student.id }}">{{ student.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div style="margin-bottom: 1rem;">
            <label for="course_id">Дисципліна:</label><br>
            <select id="course_id" name="course_id" required>
                <option value="">-- Оберіть дисципліну --</option>
                {% for course in courses %}
                    <option value="{{ course.id }}">{{ course.title }}</option>
                {% endfor %}
            </select>
        </div>

        <div style="margin-bottom: 1rem;">
            <label for="value">Оцінка (0–100):</label><br>
            <input type="number" id="value" name="value" min="0" max="100" step="0.1" required>
        </div>

        <button type="submit">Зберегти оцінку</button>
    </form>
</div>
{% endblock %}


